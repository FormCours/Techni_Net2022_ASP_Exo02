@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Liste des produits</h1>

<a class="btn btn-primary mb-2" asp-controller="Product" asp-action="Add">Ajouter un produit</a>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-info">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product product in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => product.Name)</td>
                <td>
                    @if(product.DiscountPrice is null){
                        @Html.DisplayFor(m => product.Price);
                    }
                    else {
                        @Html.DisplayFor(m => product.DiscountPrice);
                    }
                </td>
                <td>
                    <a class="btn btn-warning me-1" asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">Detail</a>
                    <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">Suprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
